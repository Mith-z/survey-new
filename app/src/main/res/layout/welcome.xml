<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <!--  Start : Your code should be within this block -->


    <!-- END    : Your code should be within this block -->
    <TextView
        android:id="@+id/textView00"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="  "
        android:textSize="20sp"/>
    <TextView
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="    WELCOME TO "
        android:textColor="#F50E0D0D"
        android:layout_below="@id/textView00"
        android:textSize="36sp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView1"
        android:text="      TAKE PART IN OUR SURVEY!"
        android:textColor="#F50C0B0B"
        android:textSize="26sp" />

    <TextView
        android:id="@+id/textView01"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="  "
        android:layout_below="@id/textView2"
        android:textSize="30sp"/>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="360dp"
        android:layout_height="100dp"
        android:layout_below="@id/textView01"
        android:text="Before we start,here are things you should know:"
        android:layout_centerHorizontal="true"
        android:textSize="27sp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="360dp"
        android:layout_height="60dp"
        android:layout_below="@id/textView3"
        android:text="-Please be honest when making choice."
        android:layout_centerHorizontal="true"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="360dp"
        android:layout_height="80dp"
        android:layout_below="@id/textView4"
        android:text="-We are just doing a research so you don't have to fake your information."
        android:layout_centerHorizontal="true"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="360dp"
        android:layout_height="60dp"
        android:layout_below="@id/textView5"
        android:text="-Please follow the step we designed for you and don't skip any questions."
        android:layout_centerHorizontal="true"
        android:textSize="20sp" />

    <CheckBox
        android:id="@+id/checkBox1"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:text="I request these requests"
        android:layout_below="@id/textView6"
        android:layout_centerHorizontal="true"
        android:textSize="20sp"
        android:checked="false"/>

    <Button
        android:id="@+id/btnStart"
        android:layout_width="320dp"
        android:layout_height="60dp"
        android:layout_below="@id/checkBox1"
        android:layout_centerHorizontal="true"
        android:background="#009688"
        android:text="Lest's start!"
        android:onClick="start"/>


</RelativeLayout>